<div metal:use-macro="view.layout">

    <div metal:fill-slot="content">
       <h1>SDD Blog</h1>
        <div tal:repeat="p posts">
            <h2 class="post-title">
                <a href="${p.url}">${p.title}</a>
            </h2>
            <div class="pub-text">${p.created}</div>
        </div>
    </div>

</div>
